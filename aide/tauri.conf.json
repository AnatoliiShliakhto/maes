{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Aide",
  "version": "0.2.2",
  "identifier": "dev.ashliakhto.aide",
  "build": {
    "beforeBuildCommand": "dx bundle --release --package aide_ui",
    "frontendDist": "../target/dx/aide_ui/release/web/public"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Aide",
        "width": 800,
        "height": 600,
        "transparent": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}